html, body
  height 100%

html
  -webkit-text-size-adjust none
  min-height 100%

body
  font-size 18px
  line-height 1.8
  background $grey-lightest
  // overflow-x hidden
  -webkit-font-smoothing antialiased

  &.-menu-opened
    overflow hidden
    width 100vw
    height 100vh

*::selection
  background $red
  color $white

*::-moz-selection
  background $red
  color $white

body, input, textarea
  font-family "Roboto"
  font-size 14px
  line-height 1.8

*:focus
  outline none

.-popup-active
  position relative
  overflow hidden
  width 100vw
  height 100vh

  // .wrapper
  //   height 100vh

// a:focus
//   outline 1px solid #000

#overlay
  background #272727
  position fixed
  z-index 9990
  top 0
  left 0
  width 100%
  height 100%
  // transform translate(0, 0)
  opacity .3
  transition opacity .15s ease-in-out

  &.-hide
    opacity 0 !important
    transform translate(-100%, -100%)

.br
  display block

input[type="search"]
  -webkit-appearance textfield

input[type='submit']
  -webkit-appearance none
  -moz-appearance none
  appearance none


input[type="number"]::-webkit-inner-spin-button,
input[type="number"]::-webkit-outer-spin-button {
  margin: 0;
  -webkit-appearance: none;
}

.-largeDesktop
  display inline-block

.-mobile
  display none

.-tablet
  display none

@media (max-width 1160px)
  .-largeDesktop
    display none

@media (max-width 992px)
  .-tablet
    display block

  &.-tablet-hide
    display none

@media (max-width 620px)
  .-mobile-hide
    display none

  .-mobile
    display block

  .-tablet
    display block

  .mobile-block
    display block
