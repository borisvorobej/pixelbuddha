.popup-wrapper
  width calc(100% - 88px)
  max-height calc(100% - 88px)
  overflow-y auto
  max-width 680px
  position fixed
  z-index 9992
  top 50%
  left 50%
  transform translate(-50%, -50%)
  background $white
  padding 64px 36px
  box-sizing border-box
  border-radius 4px
  box-shadow 5px 5px 30px rgba(69, 87, 112, 0.5)
  transition transform .2s ease-in-out

  &.-hide
    transform translate(-50%, calc(-50% - 10px))
    top -100%
    left -100%

  &.-medium
    padding 38px 60px

    .popup-headline
      padding-bottom 16px

  &.-small
    max-width 500px
    padding 30px 60px

  .close-popup
    position absolute
    top 24px
    right 24px
    cursor pointer

    svg
      fill $black
      opacity .18
      transition opacity .15s ease-in-out


    &:hover
      svg
        opacity .45

.popup-container
  .onboarding-form,
  .social-login,
  .onboarding-description
    max-width 400px
    width 100%
    margin 0 auto

  .onboarding-form
    margin-top 34px

  .onboarding-description
    padding-bottom 10px

  .social-login
    margin-top 40px
    margin-bottom 28px

  .popup-headline
    color $black
    font-size 21px
    line-height 31px
    font-weight 500
    padding-bottom 12px

    &.-largeIndention
      margin-top 20px

    &.-smallIndention
      margin-top 6px

    &.-center
      width 100%
      text-align center

  .popup-description
    color $grey-light-medium
    font-size 14px
    line-height 22px
    padding-bottom 28px

    &.-center
      width 100%
      text-align center

  .popup-controls
    display flex
    justify-content center
    width 100%
    max-width 400px
    padding-top 20px
    padding-bottom 20px

    &.-center
      margin 0 auto

    &.-small
      padding-bottom 10px

    .btn
      flex-grow 1
      margin-right 20px
      padding-left 10px
      padding-right 10px
      min-width 0

      &:last-child
        margin-right 0

  &.-wide
    .popup-content
      width 100%

    .popup-headline,
    .popup-description
      max-width none

  &.-with-icon.-centred
    display block

    .popup-icon
      width 100%
      text-align center
      margin-top 10px

  &.-with-icon
    display flex
    flex-wrap wrap
    justify-content space-between

    .popup-headline
      padding-bottom 6px

    .popup-icon
      flex 0 0 48px
      margin-top 6px

      svg
        fill $violet-border

      &.-large
        svg
          transform scale(1.3)
          margin-left 5px

    .popup-description
      padding-bottom 4px

    .popup-content
      flex 0 0 calc(100% - 84px)

.popup-image
  display flex
  justify-content space-between

.image-wrapper
  flex 0 0 272px
  padding 0

  img
    width 100%

.popup-content
  flex 0 0 calc(100% - 315px)

.popup-subscribe
  display flex
  flex-wrap wrap
  justify-content space-between
  align-items flex-start

  .input-wrapper
    flex 0 0 calc(100% - 200px)

  .btn
    flex 0 0 180px
    padding-left 0
    padding-right 0
    min-width 0

@media (max-width 720px)
  .popup-image
    .image-wrapper
      flex 0 0 200px
      padding 0

      img
        width 100%

    .popup-content
      flex 0 0 calc(100% - 243px)

@media (max-width 720px)
  .popup-wrapper
    width calc(100% - 20px)
    max-height calc(100% - 20px)
    padding 62px 32px 50px

    &.-medium
      padding 40px 32px

    &.-small
      padding 30px 32px

  .popup-image
    flex-wrap wrap

    .image-wrapper
      flex 0 0 100%
      padding 0
      text-align center
      margin-bottom 16px

      img
        width 100%
        max-width 291px

    .popup-content
      flex 0 0 100%

  .popup-container
    .popup-headline
      padding-bottom 14px

      &.-largeIndention
        margin-top -3px

      &.-center
        text-align left
        max-width 400px
        margin 0 auto

    .onboarding-description
      font-size 13px
      padding-bottom 0

    .popup-description
      padding-bottom 26px

      &.-center
        text-align left
        max-width 400px
        margin 0 auto

    .popup-controls
      justify-content flex-start

      &.-indentionBottomMobileSmall
        padding-bottom 10px

      &.-marginMobileNone
        .btn
          margin-right 0

    .onboarding-form
      margin-top 30px
      padding-bottom 40px

    .social-login
      margin-top 26px
      margin-bottom 14px

    &.-with-icon
      .popup-icon,
      .popup-content
        flex 0 0 100%

      .popup-icon
        margin-top 0
        padding-bottom 18px

        &.-large
          padding-bottom 18px

      .popup-headline
        padding-bottom 14px

    &.-with-icon.-centred
      .popup-icon
        margin-top 14px
        text-align left
        padding-bottom 28px

        svg
          margin-left 5px
          transform scale(1.3)

  .popup-subscribe
    .input-wrapper,
    .btn
      flex 0 0 100%

    .input-wrapper
      padding-bottom 12px
