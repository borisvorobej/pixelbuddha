.text-block
  line-height: 25px;
  font-size: 16px;
  color $grey

  p
    margin 0
    padding 0 0 18px

  &.-publication
    line-height 28px

    .image-wrapper
      margin-left -80px
      padding-right 38px
      box-sizing border-box

    h3.text-block-headline
      margin 16px 0 13px

    .text-block-list
      padding-bottom 13px

      li
        padding 4px 0 10px 30px

        &:before
          left: 1px;
          top: 14px;
          width: 5px;
          height: 5px;

  .image-wrapper
    padding 23px 0 42px

    img
      width 100%

.image-wrapper
  padding 23px 0 42px

  .image-description
    line-height: 22px;
    font-size: 14px;
    color #949494
    padding 15px 0 0 4px
    margin-bottom -10px

    a
      linkDefault()
      display inline-block
      color $blue-dark
      text-decoration none

h2.text-block-headline
  font-weight 500
  line-height 57px
  font-size 36px
  margin 10px 0 14px 0
  padding 0
  color $black

h3.text-block-headline
  line-height: 33px;
  font-size: 21px;
  font-weight 500
  color $black
  margin -4px 0 12px
  padding 0

h4.text-block-headline
  font-size 16px
  text-transform uppercase
  color $black

.text-block-list
  li
    position relative
    padding 2px 0 2px 9px

    &:before
      content ''
      display block
      position absolute
      left 0
      top 13px
      width 3px
      height 3px
      border-radius: 50%
      background $grey

.text-block-blockquote
  margin-left -80px
  margin-bottom 42px
  margin-top 27px

  .text-block-blockquote-text
    font-family: Josefin Sans;
    font-style: normal;
    font-weight: 300;
    line-height: 47px;
    font-size: 36px;
    color: #949494;
    letter-spacing -1.25px

  cite
    display block
    box-sizing border-box
    padding-left 81px
    color $grey
    text-transform uppercase
    font-size 13px
    line-height 23px
    margin-top 25px
    letter-spacing 1.4px

    a
      linkDefault()
      color $grey

.text-block-video
  position relative
  padding-bottom 56.25%
  height 0
  overflow hidden
  margin-top 26px
  margin-bottom 35px

.text-block-video iframe,
.text-block-video object,
.text-block-video embed
  position absolute
  top 0
  left 0
  width 100%
  height 100%

.text-block-paragraph
  &.-uppercase
    text-transform uppercase
    padding 10px 0 18px
    font-size 15px
    line-height 24px

  &.-grey-dark
    color $grey

.author-block
  border-top 1px solid $grey-lighter-medium
  border-bottom 1px solid $grey-lighter-medium
  padding 34px 0 39px
  margin 54px 32px -12px 0
  display flex

  &.-small
    .author-block-image-wrapper
      flex 0 0 50px
      height 50px
      margin-right 30px

  .author-block-image-wrapper
    flex 0 0 80px
    margin-top 4px
    height 80px
    margin-right 41px
    overflow hidden
    border-radius 50%
    position relative
    z-index 1

    &.-freebie
      border-radius 4px

  .author-block-image
    width 100%
    overflow hidden
    position absolute
    top 50%
    left 50%
    transform translate(-50%, -50%)

  .author-block-written
    font-size: 12px;
    margin-bottom -4px
    text-transform: uppercase;
    font-weight 600
    color $grey-light

  .author-block-name
    font-weight 500
    font-size 23px
    color $black
    padding-bottom 6px

    .link
      color $black

      &:hover
        color $red

      &:active
        color $red-active

    &.-freebie
      font-weight 600

  .author-block-description
    font-size 14px
    line-height 22px
    color $grey

.list-description
  .list-description-item
    display flex

  .list-description-label
    flex 0 0 60px
    font-weight 500
    font-size 16px
    line-height 25px
    color $grey
    margin-right 24px

  .list-description-value
    flex-grow 0
    flex-shrink 0



@media (max-width 1160px)
  .text-block-headline
    margin 6px 0 12px

  .text-block.-publication .image-wrapper
    margin-left -38px
    padding-right 0px

  .text-block-blockquote
    margin-left: -40px;
    margin-bottom: 40px;
    margin-top: 25px;

    cite
      padding-left 40px
      margin-top 21px

  .author-block
    margin-bottom 4px

    &.-small
      margin-top 43px
      margin-bottom -4px

@media (max-width 992px)
  .text-block
    &.-publication
      h3.text-block-headline
        margin 13px 0 13px

      .image-wrapper
        margin-left 0
        margin-right -4px
        padding-bottom 42px

        .image-description
          margin-bottom -21px

    h2.text-block-headline
      margin 12px 0 14px 0

  .text-block-blockquote
    margin-left: 0;
    margin-bottom: 40px;
    margin-top: 26px;

    .text-block-blockquote-text
      font-size 32px
      line-height 40px

    cite
      padding-left 0
      margin-top 24px

  .author-block
    margin-right 0

    &.-small
      margin-bottom 10px

@media (max-width 620px)
  .text-block
    line-height 28px

  .text-block-headline
    margin 12px 0

  .text-block
    h2.text-block-headline
      margin 18px 0
      font-size 32px
      line-height 43px

    &.-publication
      .image-wrapper
        padding 24px 0 38px
        width 100vw
        margin-left -33px
        margin-right 0

        .image-description
          padding 18px 32px 0
          margin-bottom -16px
          line-height 20px

  .text-block-blockquote
    margin 20px -10px 30px

    .text-block-blockquote-text
      font-size 26px
      line-height 35px
      letter-spacing -1px

    cite
      margin-top 20px
      margin-left 10px

  .text-block-video
    width 100vw
    margin-left -33px
    padding-bottom 70%

  .author-block
    margin 55px 0 4px 0
    padding-bottom 36px

    &.-small
      margin-top 30px
      margin-bottom -2px

      .author-block-image-wrapper
        flex 0 0 48px
        height 48px
        margin-right 18px

    .author-block-image-wrapper
      flex 0 0 59px
      height 59px
      margin-right 31px

@media
only screen and (-webkit-min-device-pixel-ratio: 1.25),
only screen and ( min--moz-device-pixel-ratio: 1.25),
only screen and ( -o-min-device-pixel-ratio: 1.25/1),
only screen and ( min-device-pixel-ratio: 1.25),
only screen and ( min-resolution: 200dpi)
	.author-block .author-block-name.-freebie
    font-weight 700
