.wrapper
  width 100%
  flex 1 0 auto
  background $white
  transform translate(0, 0)
  transition transform .25s ease-in-out

  &.-main-menu-mobile-active
    transform translate($main-menu-mobile-width, 0)

  &.-main-user-mobile-active
    transform translate(-($main-user-mobile-width), 0)

.base-col
  width 100%
  max-width 1600px
  padding 0 100px
  margin 0 auto
  box-sizing border-box

@media (max-width 1100px)
  .base-col
    padding 0 36px

@media (max-width 992px)
  .base-col
    padding 0 44px

@media (max-width 620px)
  .base-col
    padding 0 20px
